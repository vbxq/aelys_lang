needs std.io
needs std.convert

fn bubble_sort(arr) {
    let n = arr.len()
    let mut i = 0
    while i < n - 1 {
        let mut j = 0
        while j < n - i - 1 {
            if arr[j] > arr[j + 1] {
                let tmp = arr[j]
                arr[j] = arr[j + 1]
                arr[j + 1] = tmp
            }
            j = j + 1
        }
        i = i + 1
    }
}

fn print_array(arr) {
    let mut s = "["
    let mut i = 0
    while i < arr.len() {
        if i > 0 { s = s + ", " }
        s = s + convert.to_string(arr[i])
        i = i + 1
    }
    io.print(s + "]")
}

let arr = [64, 34, 25, 12, 22, 11, 90]
io.print("Before sort:")
print_array(arr)

bubble_sort(arr)

io.print("After sort:")
print_array(arr)
