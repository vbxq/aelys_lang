needs std.io
needs std.convert

fn sum(arr) -> int {
    let mut s = 0
    let mut i = 0
    while i < arr.len() {
        s = s + arr[i]
        i = i + 1
    }
    return s
}

fn max(arr) -> int {
    let mut m = arr[0]
    let mut i = 1
    while i < arr.len() {
        if arr[i] > m { m = arr[i] }
        i = i + 1
    }
    return m
}

fn reverse(v) {
    let n = v.len()
    let mut i = 0
    while i < n / 2 {
        let tmp = v[i]
        v[i] = v[n - 1 - i]
        v[n - 1 - i] = tmp
        i = i + 1
    }
}

let arr = Array<Int>[5, 2, 8, 1, 9, 3]
io.print("Array<Int>: [5, 2, 8, 1, 9, 3]")
io.print("Sum: " + convert.to_string(sum(arr)))
io.print("Max: " + convert.to_string(max(arr)))

let v = Vec<Int>[1, 2, 3, 4, 5]
io.print("Vec<Int> before reverse: [1, 2, 3, 4, 5]")
reverse(v)

let mut s = "After reverse: ["
let mut i = 0
while i < v.len() {
    if i > 0 { s = s + ", " }
    s = s + convert.to_string(v[i])
    i = i + 1
}
io.print(s + "]")
